{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "declaration": true,
    "declarationDir": "dist/types",
    "rootDirs": ["./src/types", "./dist/types"],
    "baseUrl": ".",
    "paths": {
      "~": ["./src"]
    }
    // "typeRoots": ["./src/types", "./dist/types", "./node_modules/@types"],
  },
  "include": ["src"],
  "exclude": ["**/*.stories.tsx"]
}
